extends base
block content

	h1 Currency Converter

	form(action='/convert', method='get')
		div(class="currency_form")
			span.label Amount in Dollars
			input(type='text', name='dollarAmount')
			select(name='toCurrency')
				option(value='Euro') Euros
				option(value='Pound') Pounds
		div(class=button)
			input(type='submit', value='Convert')